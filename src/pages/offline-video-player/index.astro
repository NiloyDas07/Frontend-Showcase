---
import "@/assets/css/offline-video-player/styles.css";
// Component Imports
import MainLayout from "@/layouts/main.astro";

// Page Metadata
const content = {
  title: "Offline Video Player | Frontend Showcase",
  description:
    "This is a video player app that users can download and install in their device.",
};

// Image Imports
---

<MainLayout content={content}>
  <Fragment slot="head">
    <link rel="manifest" href="/manifests/manifest.json" />
    <meta name="theme-color" content="#3498db" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="VideoPlayer" />
    <link rel="apple-touch-icon" href="/icons/icon-192x192.png" />
  </Fragment>
  <div class="light app-body">
    <header class="app-header">
      <h1>Offline Video Player</h1>
      <div class="controls">
        <!-- Theme Toggle -->
        <button
          type="button"
          title="Toggle Theme"
          class="theme-toggle button-style"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-sun-moon-icon lucide-sun-moon"
          >
            <path d="M12 8a2.83 2.83 0 0 0 4 4 4 4 0 1 1-4-4"></path>
            <path d="M12 2v2"></path>
            <path d="M12 20v2"></path>
            <path d="m4.9 4.9 1.4 1.4"></path>
            <path d="m17.7 17.7 1.4 1.4"></path>
            <path d="M2 12h2"></path>
            <path d="M20 12h2"></path>
            <path d="m6.3 17.7-1.4 1.4"></path>
            <path d="m19.1 4.9-1.4 1.4"></path>
          </svg>
          <span class="sr-only"> Toggle Theme </span>
        </button>

        <!-- Select Video -->
        <button
          type="button"
          class="select-video button-style icon-button-style"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="yellow"
            stroke="darkgoldenrod"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-file-video-icon lucide-file-video"
          >
            <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"
            ></path>
            <path d="M14 2v4a2 2 0 0 0 2 2h4"></path>
            <path d="m10 11 5 3-5 3v-6Z"></path>
          </svg>
          Select Video
        </button>

        <button
          type="button"
          class="add-subtitles button-style icon-button-style"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="white"
            stroke="darkgoldenrod"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-captions-icon lucide-captions"
          >
            <rect width="18" height="14" x="3" y="5" rx="2" ry="2"></rect>
            <path d="M7 15h4M15 15h2M7 11h2M13 11h4"></path>
          </svg>
          Add Subtitles
        </button>
      </div>
    </header>

    <main>
      <section class="player">
        <video
          controls
          preload="metadata"
          controlslist="nodownload nopicture-in-picture"
          disablepictureinpicture
        >
          <track kind="captions" />
        </video>

        <button type="button" class="custom-play-button" id="playButton">
          <svg
            fill="currentColor"
            viewBox="0 0 32 32"
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            width="100%"
            height="100%"
          >
            <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
            <g
              id="SVGRepo_tracerCarrier"
              stroke-linecap="round"
              stroke-linejoin="round"></g>
            <g id="SVGRepo_iconCarrier">
              <title>play</title>
              <path
                d="M5.92 24.096q0 1.088 0.928 1.728 0.512 0.288 1.088 0.288 0.448 0 0.896-0.224l16.16-8.064q0.48-0.256 0.8-0.736t0.288-1.088-0.288-1.056-0.8-0.736l-16.16-8.064q-0.448-0.224-0.896-0.224-0.544 0-1.088 0.288-0.928 0.608-0.928 1.728v16.16z"
              ></path>
            </g>
          </svg>

          <span class="sr-only"> Play </span>
        </button>
      </section>

      <section class="description-section col-section">
        <header>
          <h2>App Description</h2>
        </header>
        <p>
          This offline video player allows users to play video files
          <em>directly from their local device</em>. It supports
          <em>custom subtitles</em>, theme switching (light/dark), and
          <em>progressive web app (PWA)</em>
          installation so that you can
          <em>use it offline</em>
          just like a native app.
        </p>
      </section>

      <section class="installation-guide col-section">
        <header>
          <h2>How to Install and Use Offline</h2>
        </header>
        <ol>
          <li>
            <h3>Open the App:</h3>
            <p>
              Go to the website using Chrome, Edge, or Brave on your computer or
              phone. Make sure the web address starts with <code>https://</code>
              or <code>localhost</code>.
            </p>
          </li>
          <li>
            <h3>Add to Your Device:</h3>
            <p>
              • <em>On Desktop:</em> Click the "Install" button in your browser's
              address bar.<br />
              • <em>On Android:</em> Tap the three-dot menu and choose "Add to Home
              screen" or "Install".
            </p>
          </li>
          <li>
            <h3>Open from Your Home Screen or App Menu:</h3>
            <p>
              You'll now find the app icon on your desktop or home screen—just
              like any other app.
            </p>
          </li>
          <li>
            <h3>Use Without Internet:</h3>
            <p>
              Once installed, you can open the app even when you're offline. It
              saves the necessary files in your device's memory.
            </p>
          </li>
          <li>
            <h3>Play Local Videos:</h3>
            <p>
              Tap "Select Video" to pick a video file from your device. You can
              also add subtitles with the "Add Subtitles" button.
            </p>
          </li>
        </ol>
      </section>
    </main>

    <script src="/offline-video-player/script.js" is:inline></script>
  </div>
</MainLayout>
