---
import "./styles.css";
// Component Imports
import MainLayout from "@/layouts/main.astro";

// Image Imports
import coinImg from "./Images/coin.gif";
import bombImg from "./Images/bomb.gif";

// Page Metadata
const content = {
  title: "Coin Burst | Frontend Showcase",
  description:
    "A simple game where you hover over coins to score points and avoid bombs.",
};

// Pass image URLs to the script
const script = `
  window.gameAssets = {
    coin: "${coinImg.src}",
    bomb: "${bombImg.src}",
  };
`;
---

<MainLayout content={content}>
  <div id="root"></div>
  <script set:html={script} />
  <script src="./script.js"></script>
</MainLayout>
